<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To-Do List</title>
  <style>
    body {
      font-family: Arial;
      background-color: #f0f2f5;
      margin: 0;
      padding: 0;
    }

    .main-container {
      display: flex;
      max-width: 1100px;
      margin: 30px auto;
      gap: 20px;
    }

    .todo-list-container {
      flex: 1;
      background-color: rgb(255, 236, 220);
      padding: 15px;
      border-radius: 12px;
      overflow-y: auto;
      max-height: 600px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-container {
      flex: 1;
      background-color: rgb(255, 236, 220);
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    form input, form textarea {
      width: 100%;
      margin: 10px 0;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    button {
      background: rgb(188, 111, 69);
      color: white;
      border: none;
      padding: 10px;
      width: 100%;
      cursor: pointer;
      border-radius: 8px;
      margin-top: 10px;
    }

    .todo {
      background: rgb(255, 221, 200);
      padding: 12px;
      margin: 10px 0;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .todo-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .todo-heading-date {
      display: flex;
      flex-direction: column;
    }

    .todo-header {
      font-weight: bold;
      font-size: 1rem;
    }

    .todo-date {
      color: #555;
      font-size: 0.85rem;
    }

    .todo-actions {
      display: flex;
      gap: 10px;
    }

    .todo-actions button {
      width: auto;
      padding: 6px 10px;
      font-size: 0.9rem;
      background: rgb(188, 111, 69);
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: rgb(95, 53, 30);
    }
  </style>
</head>
<body>

  <div class="main-container">
    <!-- Left: To-Do List -->
    <div class="todo-list-container">
      <h2>üóÇÔ∏è All Todos</h2>
      <div id="todoList"></div>
    </div>

    <!-- Right: Form -->
    <div class="form-container">
      <h2>üìã My To-Do List</h2>
      <form id="todoForm">
        <input type="text" id="heading" placeholder="Heading" required />
        <textarea id="description" placeholder="Description" required></textarea>
        <input type="date" id="date" required />
        <input type="time" id="time" required />
        <button type="submit">Add / Update Todo</button>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('todoForm');
    const todoList = document.getElementById('todoList');
    let editId = null;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const heading = document.getElementById('heading').value;
      const description = document.getElementById('description').value;
      const date = document.getElementById('date').value;
      const time = document.getElementById('time').value;

      const todo = { heading, description, date, time };

      try {
        let response;
        if (editId) {
          response = await fetch(`/api/todo/update/${editId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(todo),
          });
          editId = null;
        } else {
          response = await fetch('/api/todo/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(todo),
          });
        }

        const data = await response.json();
        form.reset();
        loadTodos();
      } catch (error) {
        console.error("‚ùå Error submitting todo:", error);
      }
    });

    async function loadTodos() {
      try {
        const res = await fetch('/api/todo/all');
        const todos = await res.json();

        todoList.innerHTML = '';
        todos.forEach(todo => {
          const div = document.createElement('div');
          div.className = 'todo';
          div.innerHTML = `
            <div class="todo-content">
              <div class="todo-heading-date">
                <div class="todo-header">${todo.heading}</div>
                <div class="todo-date">${todo.date}</div>
              </div>
              <div class="todo-actions">
                <button onclick="editTodo('${todo._id}', '${todo.heading}', '${todo.description}', '${todo.date}', '${todo.time}')">‚úèÔ∏è</button>
                <button onclick="deleteTodo('${todo._id}')">üóëÔ∏è</button>
              </div>
            </div>
          `;
          todoList.appendChild(div);
        });
      } catch (err) {
        console.error("‚ùå Error loading todos:", err);
      }
    }

    async function deleteTodo(id) {
      if (confirm("Are you sure you want to delete this todo?")) {
        try {
          const res = await fetch(`/api/todo/delete/${id}`, {
            method: 'DELETE',
          });
          const data = await res.json();
          loadTodos();
        } catch (err) {
          console.error("‚ùå Error deleting todo:", err);
        }
      }
    }

    function editTodo(id, heading, description, date, time) {
      document.getElementById('heading').value = heading;
      document.getElementById('description').value = description;
      document.getElementById('date').value = date;
      document.getElementById('time').value = time;
      editId = id;
    }

    loadTodos();
  </script>
</body>
</html>
